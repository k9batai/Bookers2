<div class= "container px-5 px-sm-0">
  <div class= "row">
    <div class= "col-md-3">
      <h2>User info</h2>
      <p><%= image_tag user.get_profile_image(100,100) %></p>
      <table class= "table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class= "row">
        <% if user == current_user %>
           <%= link_to 'New Post', edit_user_path(user), class: "btn btn-outline-secondary btn-block" %>
        <% else %>
           <%= link_to 'New Post', user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
        <% end %>
      </div>
      <h2 class= "mt-3">New Book</h2>
      <%= form_with model: Book do |f| %>
        <div class= "form-group">
          <label for= "book_title">Title</label> <br>
          <%= f.text_field :title %>
        </div>
        <div class= "form-group">
          <label for= "book_opinion">Opinion</label> <br>
          <%= f.text_area :body %>
        </div>
        <div class= "form-group">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>